<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ServerMonitor.ViewModels"
             xmlns:models="clr-namespace:ServerMonitor.Models"
             x:Class="ServerMonitor.MainPage"
             x:DataType="vm:SensorViewModel">
    <VerticalStackLayout>
        <Button Text="Refrescar Datos"
                Command="{Binding LoadDataCommand}" />
        <CollectionView ItemsSource="{Binding SensorData}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:SensorData">
                    <HorizontalStackLayout Padding="10">
                        <Label Text="{Binding Temperature, StringFormat='Temp: {0:F1} °C'}" />
                        <Label Text="{Binding LightLevel, StringFormat='Luz: {0}'}" />
                        <Label Text="{Binding IsAlarm, StringFormat='Alarma: {0}'}" />
                        <Label Text="{Binding Timestamp, StringFormat='Hora: {0:yyyy-MM-dd HH:mm:ss}'}" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>