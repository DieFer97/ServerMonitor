<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ServerMonitor.ViewModels"
             xmlns:models="clr-namespace:ServerMonitor.Models"
             xmlns:local="clr-namespace:ServerMonitor"
             x:Class="ServerMonitor.MainPage"
             x:DataType="vm:SensorViewModel"
             BackgroundColor="#F5F5F5"
             Padding="10">
    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Header -->
        <Label Grid.Row="0"
               Text="Monitoreo del Servidor"
               FontSize="28"
               FontAttributes="Bold"
               FontFamily="verdana"
               HorizontalOptions="Center"
               TextColor="#212121"
               Margin="0,10,0,10"/>
        <!-- Filtro fecha + nivel -->
        <Border Grid.Row="1"
                Stroke="#BDBDBD"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 12"
                BackgroundColor="White"
                Padding="15"
                Margin="0,0,0,20">
            <VerticalStackLayout Spacing="10">
                <Label Text="Filtrar por Fecha y Niveles" FontAttributes="Bold" FontFamily="times" HorizontalOptions="Center"/>
                <!-- Fecha única -->
                <Grid ColumnDefinitions="*,Auto,*" ColumnSpacing="10">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Fecha" VerticalOptions="Center" FontFamily="times" FontAttributes="Bold"/>
                        <DatePicker Date="{Binding SelectedDate}"
                                    TextColor="#212121"/>
                    </VerticalStackLayout>
                    <Button Grid.Column="1"
                            Text="Filtrar"
                            Command="{Binding FilterByDateCommand}"
                            BackgroundColor="#2196F3"
                            TextColor="black"
                            CornerRadius="8"
                            FontFamily="verdana"
                            Padding="15,8"
                            VerticalOptions="End"/>
                    <VerticalStackLayout Grid.Column="2">
                        <Label Text="Niveles:" VerticalOptions="Center" FontFamily="times" FontAttributes="Bold"/>
                        <Picker ItemsSource="{Binding Levels}"
                                SelectedItem="{Binding SelectedLevel}"
                                WidthRequest="120"/>
                    </VerticalStackLayout>
                </Grid>
            </VerticalStackLayout>
        </Border>
        <!-- Tabla paginada -->
        <ScrollView Grid.Row="2">
            <VerticalStackLayout Spacing="10">
                <!-- Encabezados -->
                <Border Stroke="#BDBDBD"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 12"
                        BackgroundColor="#EEEEEE"
                        Padding="12"
                        HorizontalOptions="Fill">
                    <Grid ColumnDefinitions="*,*,*,*">
                        <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center" Spacing="3">
                            <Label Text="🌡️" FontSize="20" HorizontalOptions="Center"/>
                            <Label Text="Temp." FontAttributes="Bold" FontSize="13"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center" Spacing="3">
                            <Label Text="🔥" FontSize="20" HorizontalOptions="Center"/>
                            <Label Text="Flama" FontAttributes="Bold" FontSize="13"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center" Spacing="3">
                            <Label Text="🔔" FontSize="20" HorizontalOptions="Center"/>
                            <Label Text="Alarma" FontAttributes="Bold" FontSize="13"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="3" HorizontalOptions="Center" Spacing="3">
                            <Label Text="📆" FontSize="20" HorizontalOptions="Center"/>
                            <Label Text="Fecha" FontAttributes="Bold" FontSize="12"/>
                        </VerticalStackLayout>
                    </Grid>
                </Border>
                <CollectionView ItemsSource="{Binding PagedData}"
                                SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:SensorData">
                            <Border Stroke="#E0E0E0"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 12"
                                    BackgroundColor="{Binding IsAlarm, Converter={StaticResource BoolToColorConverter}}"
                                    Padding="12"
                                    Margin="0,0,0,10"
                                    HorizontalOptions="Fill">
                                <Grid ColumnDefinitions="*,*,*,*">
                                    <Label Grid.Column="0"
                                           Text="{Binding Temperature, StringFormat='{0:F1} °C'}"
                                           TextColor="White"
                                           FontSize="14"
                                           FontFamily="verdana"
                                           HorizontalOptions="Center"
                                           FontAttributes="Bold"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding LightLevel}"
                                           TextColor="White"
                                           FontSize="14"
                                           FontFamily="verdana"
                                           HorizontalOptions="Center"
                                           FontAttributes="Bold"/>
                                    <Label Grid.Column="2"
                                           Text="{Binding IsAlarm, Converter={StaticResource BoolToStringConverter}}"
                                           TextColor="White"
                                           FontSize="14"
                                           FontFamily="verdana"
                                           HorizontalOptions="Center"
                                           FontAttributes="Bold"/>
                                    <Label Grid.Column="3"
                                           Text="{Binding Timestamp, StringFormat='{0:dd-MM-yyyy}'}"
                                           TextColor="White"
                                           FontSize="12"
                                           FontFamily="verdana"
                                           HorizontalOptions="Center"
                                           FontAttributes="Bold"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
        <!-- Paginación -->
        <Grid Grid.Row="3" ColumnDefinitions="*,Auto,Auto,*" Margin="0,10">
            <Button Grid.Column="1" Text="⬅ Anterior" Command="{Binding PreviousPageCommand}"
                    IsEnabled="{Binding HasPreviousPage}"/>
            <Label Grid.Column="2" Text="{Binding PageInfo}" VerticalOptions="Center" Margin="10,0"/>
            <Button Grid.Column="3" Text="Siguiente ➡" BackgroundColor="#2196F3" Command="{Binding NextPageCommand}"
                    IsEnabled="{Binding HasNextPage}"/>
        </Grid>
    </Grid>
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <local:BoolToStringConverter x:Key="BoolToStringConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>